<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">

    <RelativeLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_weight="0.98">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="35dp"
            android:text="@string/regist"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/edtPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ivBackground"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="50dp"
            android:background="@null"
            android:drawableLeft="@drawable/ic_phone"
            android:drawablePadding="15dp"
            android:hint="@string/input_mobile"
            android:inputType="phone"
            android:maxLength="11"
            android:textColorHint="@color/color_B6"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvSendPhoneCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/edtPhone"
            android:layout_alignRight="@+id/edtPhone"
            android:layout_marginRight="30dip"
            android:text="@string/regist_get_code"
            android:onClick="Onregist_get_code"
            android:textColor="@color/color6389CD"
            android:textSize="14sp" />

        <View
            android:id="@+id/viewLine_1"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/edtPhone"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="5dp"
            android:background="@color/color_E6" />

        <EditText
            android:id="@+id/edtCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/viewLine_1"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="25dp"
            android:background="@null"
            android:drawablePadding="15dip"
            android:hint="@string/regist_input_code"
            android:inputType="number"
            android:textColorHint="@color/color_B6"
            android:textSize="14sp" />

        <View
            android:id="@+id/viewLine_2"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/edtCode"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="5dp"
            android:background="@color/color_E6" />

        <EditText
            android:id="@+id/edtPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/viewLine_2"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="25dp"
            android:background="@null"
            android:drawableLeft="@drawable/ic_password"
            android:drawablePadding="15dip"
            android:hint="@string/regist_set_pwd"
            android:inputType="textPassword"
            android:textColorHint="@color/color_B6"
            android:textSize="14sp" />

        <View
            android:id="@+id/viewLine_3"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/edtPassword"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="5dp"
            android:background="@color/color_E6" />


        <Button
            android:id="@+id/btnLogin"
            android:layout_width="match_parent"
            android:layout_height="48dp"
android:onClick="OnRegister_submit"
            android:background="@drawable/bg_btn_confirm"
            android:text="@string/regist_login"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_marginTop="45dp"
            android:layout_below="@+id/viewLine_3"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    </RelativeLayout>

</LinearLayout>
